<section class="inventory">
  <% if (msg) { %>
  <div class="toast success"><%= msg %></div>
  <% } %>

  <h2>Inventory List</h2>
  <table>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Quantity</th>
      <th>Price ($)</th>
      <th>Action</th>
    </tr>
    <% items.forEach(item => { %>
    <tr>
      <td><%= item.name %></td>
      <td><%= item.category %></td>
      <td><%= item.quantity %></td>
      <td><%= item.price %></td>
      <td>
        <form action="/delete/<%= item.id %>?_method=DELETE" method="POST">
          <button type="submit" class="delete-btn">Delete</button>
        </form>
      </td>
    </tr>
    <% }) %>
  </table>
</section>
